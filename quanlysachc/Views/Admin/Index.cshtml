@model User

<form class="mt-3" id="login-form" asp-action="Index" asp-controller="Admin" enctype="multipart/form-data" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="row mb-3 form-group">
        <label for="login-email-input" class="col-12 col-form-label">Tài khoản</label>
        <div class="col-12">
            <input type="text" asp-for="TaiKhoan" class="form-control" id="login-email-input" placeholder="Nhập tài khoản">
            <span asp-validation-for="TaiKhoan" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3 form-group">
        <label for="login-password-input" class="col-12 col-form-label">Mật khẩu</label>
        <div class="col-12">
            <input type="password" asp-for="MatKhau" class="form-control" id="login-password-input" placeholder="Nhập mật khẩu">
            <span asp-validation-for="MatKhau" class="text-danger"></span>
        </div>
    </div>

    <div class="row mb-3 form-group">
        <label asp-validation-summary="ModelOnly" class="text-danger"></label>
    </div>

    <div class="row justify-content-center">
        <button type="submit" class="btn btn-primary w-75 fw-bold" id="btn-form-login">Đăng nhập</button>
    </div>
</form>